extends layouts/videoContent

block content 
    .video__detail
        .video__player
            video#videoPlayer(src=`${video.fileUrl}`  controls=false autoplay=true preload='metadata')
            .video__controller-container
                .video__controller-column
                    .video__loadingbar
                .video__controller-column
                    .video__option-column
                        #playBtn.playbtn-box
                            span.playbutton
                                <i class="fas fa-play"></i>
                        .stepforwardbtn-box
                            span#setpForwardBtn.stepforwardbutton
                                <i class="fas fa-step-forward"></i>
                        .volumebtn-box
                            span#volumeBtn.volumebutton
                                <i class="fas fa-volume-up"></i>
                        .durationtime-box
                            span#currentTime 00:00
                            |  / 
                            span#durationTime 00:00 
                    .video__option-column
                        .settingbtn-box
                            span#settingBtn.settingbutton
                                <i class="fas fa-cog" style="color:white;"></i>
        .video__explain-container
            .video__explain    
                .video__info
                    h5.video__title=video.title
                    .video__additional-information
                        .video__view-container
                            span.video__views=video.views
                            if video.views < 1
                                span.video__views-text  view
                            else
                                span.video__views-text  views
                        .video__editbtn
                            a(href=routes.editVideo(video.id)) Edit Video
                                span 
                                    <i class="far fa-edit"></i>
                .video__comments
                    if video.comments.length === 1
                        span.video__comment-number 1 comment
                    else
                        span.video__comment-number #{video.comments.length} comments
            