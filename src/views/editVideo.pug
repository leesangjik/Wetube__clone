extends layouts/main

block content 
    .edit__video
        .edit__text
            h1 Edit Video
        .form-container
            form(action=routes.editVideo(video.id), method="post")
                .title__input
                    span.formTitle Title : 
                    input(type="text", placeholder="Title", name="title" value=video.title)
                .description__textarea
                    span.formDescription Description : 
                    textarea(name="description", placeholder="Description" style="width:165px; height:22px")=video.description
                input(type="submit", value="Update Video")
            a.form-container__link.form-container__link--delete(href=routes.deleteVideo(video.id)) Delete Video 
            