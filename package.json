{
  "name": "wetube__clone",
  "version": "1.0.0",
  "description": "Cloning Youtube with vanlila and nodeJs",
  "main": "index.js",
  "scripts": {
    "dev:server": "nodemon --exec babel-node src/init.js --delay 2",
    "dev:assets": "cd src && cross-env WEBPACK_ENV=development  webpack -w",
    "build:assets": "cd src && cross-env WEBPACK_ENV=production  webpack",
    "build:server": "babel src --out-dir build --ignore 'src/assets','src/static','src/webpack.config.js'",
    "copyAll": "cp -R src/static build && cp -R src/views build",
    "build": "npm run build:server && npm run build:assets && npm run copyAll",
    "prebuild": "rm -rf build",
    "start": "node build/init.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leesangjik/Wetube__clone.git"
  },
  "author": "Lee Sang Jik",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leesangjik/Wetube__clone/issues"
  },
  "homepage": "https://github.com/leesangjik/Wetube__clone#readme",
  "dependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.8.7",
    "@babel/node": "^7.8.7",
    "@babel/polyfill": "^7.10.4",
    "@babel/preset-env": "^7.8.7",
    "autoprefixer": "^9.8.5",
    "aws-sdk": "^2.719.0",
    "babel-loader": "^8.1.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "core-js": "^3.6.4",
    "cross-env": "^7.0.2",
    "css-loader": "^3.6.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "helmet": "^3.21.3",
    "mongoose": "^5.9.14",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "multer-s3": "^2.9.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^6.0.1",
    "postcss-loader": "^3.0.0",
    "pug": "^2.0.4",
    "sass": "^1.26.10",
    "sass-loader": "^9.0.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "devDependencies": {
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.5"
  }
}